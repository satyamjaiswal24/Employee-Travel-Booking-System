@model Employee_Travel_Booking_App.travelrequest

@{
    ViewBag.Title = "Approve Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>Approve Request</h2>

<div class="container">
    <h4>Are you sure you want to approve the following travel request?</h4>
    <dl class="dl-horizontal">
        <dt>Request ID</dt>
        <dd>@Model.requestid</dd>
        <dt>Employee Name</dt>
        <dd>@(Model.employeefirstname + " " + Model.employeelastname)</dd>
        <dt>Departure City</dt>
        <dd>@Model.departurecity</dd>
        <dt>Arrival City</dt>
        <dd>@Model.arrivalcity</dd>
        <dt>Departure Date</dt>
        <dd>@Model.departuredate</dd>
    </dl>
    @using (Html.BeginForm("ApproveConfirmed", "Manager", new { id = Model.requestid }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success">Confirm Approve</button>
        <a href="@Url.Action("Requests", "Manager")" class="btn btn-default">Cancel</a>
    }
</div>