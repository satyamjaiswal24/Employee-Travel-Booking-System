
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
    
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <style>
        *{
            margin:0;
            padding:0;
        }
        .body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: Nunito, sans-serif;
            justify-content: center;
            align-items: center;
            font-family: Nunito, sans-serif;
        }

        /* Adjusted Card Styles */
        .card {
            width: 100%;
            max-width: 400px;
            border: none;
            margin-top:30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            border-radius: 10px 10px 0 0;
            padding-top:7px;
            padding-bottom:7px;
        }

        .card-text {
            margin-bottom: 20px;
        }

        .btn {
            border-radius: 20px;
            padding: 10px 20px;
        }

        /* Footer Styles */
        footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        /* Login Section Styles */
        .login-section {
            position: fixed;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>

    <div class="text-center mt-5">
        <h2>Welcome to Admin Dashboard</h2>
        <p>You can manage employees, managers, travel agents, and handle travel requests from this dashboard.</p>
    </div>

    <div class="container text-center" style="margin-bottom:82px">

        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        Employee Management
                    </div>
                    <div class="text-center mt-2" style="height:130px; padding-top:19px;">
                        <p style="padding-bottom:20px;" class="fs-6">Manage employees, Assign Manager</p>
                        <a href="@Url.Action("Index", "Employees")" class="btn btn-primary">Manage Employees</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        Travel Agents Management
                    </div>
                    <div class="text-center mt-2" style="height: 130px; padding-top: 19px;">
                        <p style="padding-bottom:20px;" class="fs-6">Add and Edit Travel Agents</p>
                        <a  href="@Url.Action("Index", "TravelAgents")" class="btn btn-primary">Manager Travel Agents</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mt-5">
                <div class="card">
                    <div class="card-header">
                        Manager Management
                    </div>
                    <div class="text-center mt-2" style="height: 130px; padding-top: 19px;">
                        <p style="padding-bottom:20px;"class="fs-6">Add, Edit and Soft delete Manager</p>
                        <a href="@Url.Action("Index", "Managers")" class="btn btn-primary">Manage Manager</a>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
