@model Employee_Travel_Booking_App.travelrequest

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<style>
    .details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .details-title {
        font-size: 28px;
        color: #fff; /* Changed text color to white */
        text-align: center;
        margin-bottom: 20px;
        background-color: darkgrey; /* Added dark slate color */
        padding: 10px 0; /* Added padding for better appearance */
        border-radius: 5px; /* Added border radius for rounded corners */
    }

    .details-list dl {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .details-list dt {
        flex: 0 0 30%;
        margin: 0;
        padding: 5px;
        font-weight: bold;
        color: #007bff;
        text-align: left;
    }

    .details-list dd {
        flex: 0 0 65%;
        margin: 0;
        padding: 5px;
        color: #555;
        text-align: left;
    }

    .details-buttons {
        margin-top: 20px;
        text-align: center;
    }

        .details-buttons a {
            text-decoration: none;
            padding: 10px 20px;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .details-buttons a.edit {
                background-color: #28a745;
            }

                .details-buttons a.edit:hover {
                    background-color: #218838;
                }

            .details-buttons a.back {
                background-color: #dc3545;
                margin-left: 10px;
            }

                .details-buttons a.back:hover {
                    background-color: #c82333;
                }
</style>

<div class="details-container">
    <h1 class="details-title">Details</h1>
    <div class="details-list">
        <dl class="dl-horizontal">
            <dt>Request ID:</dt>
            <dd>@Html.DisplayFor(model => model.requestid)</dd>

            <dt>Employee ID:</dt>
            <dd>@Html.DisplayFor(model => model.employeeid)</dd>

            <dt>Employee Name:</dt>
            <dd>@Html.DisplayFor(model => model.employeename)</dd>

            <dt>Email:</dt>
            <dd>@Html.DisplayFor(model => model.employeeemail)</dd>

            <dt>Reason for Travel:</dt>
            <dd>@Html.DisplayFor(model => model.reasonfortravel)</dd>

            <dt>Flight Needed:</dt>
            <dd>@Html.DisplayFor(model => model.flightneeded)</dd>

            <dt>Hotel Needed:</dt>
            <dd>@Html.DisplayFor(model => model.hotelneeded)</dd>

            <dt>Departure City:</dt>
            <dd>@Html.DisplayFor(model => model.departurecity)</dd>

            <dt>Arrival City:</dt>
            <dd>@Html.DisplayFor(model => model.arrivalcity)</dd>

            <dt>Departure Date:</dt>
            <dd>@Html.DisplayFor(model => model.departuredate)</dd>

            <dt>Departure Time:</dt>
            <dd>@Html.DisplayFor(model => model.departuretime)</dd>

            <dt>Additional Information:</dt>
            <dd>@Html.DisplayFor(model => model.additionalinformation)</dd>

            <dt>Approval Status:</dt>
            <dd>@Html.DisplayFor(model => model.approvalstatus)</dd>
        </dl>
    </div>
    <div class="details-buttons">
        @Html.ActionLink("Back", "Requests", new { id = Model.requestid }, new { @class = "btn btn-primary edit" })
    </div>
</div>
