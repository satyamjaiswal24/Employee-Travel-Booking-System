@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: darkgray;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        header {
            background-color: black;
            padding: 15px 0;
            color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: relative;
        }

            header h1 {
                margin: 0;
                display: inline;
                border: 2px solid white;
                border-radius: 10px;
                padding: 5px 10px;
                position: relative;
                animation: running-border 2s infinite linear;
            }

        @@keyframes running-border {
            0% {
                border-color: white;
            }

            10% {
                border-color: red;
            }

            20% {
                border-color: orange;
            }

            30% {
                border-color: yellow;
            }

            40% {
                border-color: green;
            }

            50% {
                border-color: blue;
            }

            60% {
                border-color: indigo;
            }

            70% {
                border-color: violet;
            }

            80% {
                border-color: pink;
            }

            90% {
                border-color: brown;
            }

            100% {
                border-color: white;
            }
        }

        .logout {
            color: #fff;
            text-decoration: none;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: 20px;
            padding: 5px 10px;
            border: 1px solid #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .logout:hover {
                background-color: #0056b3;
                color: white;
            }

        .options {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        .option {
            margin: 0 10px;
        }

            .option a {
                display: inline-block;
                padding: 15px 25px;
                background-color: gray;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3); /* Added box-shadow */
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .option a:hover {
                    background-color: #0056b3;
                    transform: translateY(-2px);
                }

        footer {
            color: #fff;
            padding: 15px 0;
            position: relative;
            margin: 0;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="welcome-box">
                <h1>Welcome, Manager !</h1>
            </div>
            <a href="@Url.Action("Login_Meth", "LoginAccount")" class="logout">Logout</a>
        </div>
    </header>

    <div class="container">
        <div class="dashboard-box">
            <h2>Manager Dashboard</h2>
            <div class="options">
                <div class="option">
                    <a href="@Url.Action("Requests", "Manager")" class="approve">View Requests</a>
                </div>
                <div class="option">
                    <a href="@Url.Action("RequestHistory", "Manager")" class="history">View Request History</a>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="contact-container"></div>
    </footer>
</body>
</html>

