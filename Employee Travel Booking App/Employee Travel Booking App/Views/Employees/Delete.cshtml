@model Employee_Travel_Booking_App.employee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .employee-card {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

        .employee-card:hover {
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    .employee-details {
        margin-bottom: 20px;
    }

        .employee-details dt {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .employee-details dd {
            margin-left: 20px;
            margin-bottom: 10px;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        margin-right: 10px;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-cancel {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .deleted-employee {
        color: #ccc; /* Adjust the color for deleted employees */
    }
</style>

<h2>Delete Employee</h2>

<div class="employee-card">
   @* @if (Model.status.HasValue && Model.status.Value)*@
    {
        <h3>Are you sure you want to delete this employee?</h3>
        <div class="employee-details">
            <h4>Employee Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt><strong>Employee Name:</strong></dt>
                <dd>@Html.DisplayFor(model => model.emp_name)</dd>

                <dt><strong>Email Address:</strong></dt>
                <dd>@Html.DisplayFor(model => model.email)</dd>

                <dt><strong>Password:</strong></dt>
                <dd>@Html.DisplayFor(model => model.emp_password)</dd>

                <dt><strong>Department:</strong></dt>
                <dd>@Html.DisplayFor(model => model.department)</dd>

                <dt><strong>Position:</strong></dt>
                <dd>@Html.DisplayFor(model => model.position)</dd>

                <dt><strong>Hire Date:</strong></dt>
                <dd>@Html.DisplayFor(model => model.hiredate)</dd>

                <dt><strong>Phone Number:</strong></dt>
                <dd>@Html.DisplayFor(model => model.phonenumber)</dd>

                <dt><strong>Address:</strong></dt>
                <dd>@Html.DisplayFor(model => model.address)</dd>

                <dt><strong>Manager:</strong></dt>
                <dd>@Html.DisplayFor(model => model.manager.name)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Index")" class="btn btn-cancel">Cancel</a>
                </div>
            }
        </div>
    }
    @*else
    {
        <h3 class="deleted-employee">This employee has been deleted.</h3>
    }*@
</div>
