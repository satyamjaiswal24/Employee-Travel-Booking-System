﻿@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_loginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agent Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden; /* Hide overflow to prevent scrolling */
            position: relative;
            background-color: whitesmoke; /* Black background */
        }

        .login-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.7); /* Dark semi-transparent background color */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 255, 0.5); /* Blue box shadow */
            width: 400px;
            max-width: 90%; /* Adjust maximum width as needed */
            animation: slideIn 0.5s forwards; /* Apply slide-in animation */
            opacity: 7; /* Start with opacity 0 */
            width: 350px; /* Set width to 350 pixels */
            height: auto;
        }

        @@keyframes slideIn {
            from {
                transform: translate(-50%, -70%);
                opacity: 0;
            }

            to {
                transform: translate(-50%, -50%);
                opacity: 7;
            }
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #1e90ff; /* Blue title */
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 10px; /* Increase margin bottom */
            color: #fff; /* White label color */
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px; /* Increase padding */
            margin-bottom: 20px; /* Increase margin bottom */
            border: 1px solid #00f; /* Blue border */
            border-radius: 5px;
            box-sizing: border-box;
            background-color: rgba(255, 255, 255, 0.7); /* Semi-transparent white background */
            margin-top: 15px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 12px; /* Increase padding */
            background-color: #1e90ff; /* Blue background */
            color: #fff; /* White text color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 25px;
        }

            input[type="submit"]:hover {
                background-color: #005;
                /* Darker blue on hover */
            }

        .error-message {
            color: red;
            margin-top: 10px;
            text-align: center; /* Center align error messages */
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Agent Login</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="error-message">@TempData["ErrorMessage"]</div>
        }
        <form method="post" action="@Url.Action("Login", "AgentLogin")">
            <!-- Updated action URL -->
            @Html.AntiForgeryToken() <!-- Include anti-forgery token -->
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" required>
            <label for="password" style="margin-top:16px">Password:</label>
            <input type="password" id="password" name="password" required>
            <input type="submit" value="Login">
        </form>
    </div>
</body>
</html>