@model IEnumerable<Employee_Travel_Booking_App.travelrequest>

@{
    ViewBag.Title = "RequestHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<style>
    /* Existing CSS styles */

    /* Adjust font size for table headers */
    .table thead th {
        font-size: 12px; /* Adjust the font size as needed */
    }

    /* Adjust font weight for table rows */
    tr {
        font-weight: normal;
    }
    
    /* Make table scrollable horizontally */
    .table-container {
        margin: 10px; /* Reduce margin from all sides */
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow-x: auto; /* Make the container horizontally scrollable */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

        .table th,
        .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
            color: #212529;
            white-space: nowrap; /* Prevent text wrapping */
        }

        .table th {
            background-color: #007bff;
            color: #fff;
        }

        .table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .table tr:hover {
            background-color: #e9ecef;
        }

    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #138496;
        }
</style>
<h2>Request History of Employees</h2>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th style="white-space: nowrap;">Employee Name</th>
                <th style="white-space: nowrap;">Employee Email</thstyle="white-space:>
                <th style="white-space: nowrap;">Employee Id</th>
                <th style="white-space: nowrap;">Reason For Travel</th>
                <th style="white-space: nowrap;">Flight Needed</th>
                <th style="white-space: nowrap;">Hotel Needed</th>
                <th style="white-space: nowrap;">Departure City</th>
                <th style="white-space: nowrap;">Arrival City</th>
                <th style="white-space: nowrap;">Departure Date</th>
                <th style="white-space: nowrap;">Departure Time</th>
                <th style="white-space: nowrap;">Return Date</th>
                <th style="white-space: nowrap;">Additional Information</th>
                <th style="white-space: nowrap;">Approval Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.employeefirstname) @Html.DisplayFor(modelItem => item.employeelastname)</td>
                    <td>@Html.DisplayFor(modelItem => item.employeeemail)</td>
                    <td>@Html.DisplayFor(modelItem => item.employeeid)</td>
                    <td>@Html.DisplayFor(modelItem => item.reasonfortravel)</td>
                    <td>@Html.DisplayFor(modelItem => item.flightneeded)</td>
                    <td>@Html.DisplayFor(modelItem => item.hotelneeded)</td>
                    <td>@Html.DisplayFor(modelItem => item.departurecity)</td>
                    <td>@Html.DisplayFor(modelItem => item.arrivalcity)</td>
                    <td>@Html.DisplayFor(modelItem => item.departuredate)</td>
                    <td>@Html.DisplayFor(modelItem => item.departuretime)</td>
                    <td>@Html.DisplayFor(modelItem => item.returnDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.additionalinformation)</td>
                    <td>@Html.DisplayFor(modelItem => item.approvalstatus)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div style="margin-top: 20px; text-align: center;">
    <a href="@Url.Action("ManagerDashboard", "Manager")" class="btn btn-primary">Back To Dashboard</a>
</div>


