@model Employee_Travel_Booking_App.employee

@{
    ViewBag.Title = "Details";
}

<div class="container mt-5">
    <h2 class="text-center">Your Details</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.emp_name)</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.email)</dd>

                <dt class="col-sm-4">Department:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.department)</dd>

                <dt class="col-sm-4">Position:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.position)</dd>

                <dt class="col-sm-4">Hire Date:</dt>
                <dd class="col-sm-8">@Model.hiredate.Value.ToString("dd-MM-yyyy")</dd>


                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.phonenumber)</dd>

                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.address)</dd>

                <dt class="col-sm-4">Manager:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.manager.name)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 text-center">
        @Html.ActionLink("Back to Dashboard", "Index", "travelrequests", null, new { @class = "btn btn-primary mr-2" })
    </div>
</div>
